{
  "name": "horat1us/yii2-base",
  "description": "Some extensions for Yii2 Framework",
  "type": "library",
  "require": {
    "php": ">=7.4",
    "yiisoft/yii2": "^2.0.19",
    "nesbot/carbon": "^3 || ^2.24 || ^1.22",
    "horat1us/yii2-validation-exception": "^1.0"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.8",
    "squizlabs/php_codesniffer": "^3.10",
    "phpunit/phpunit": "^9.5",
    "horat1us/yii2-asset-free": "^1.0"
  },
  "keywords": [
    "yii2",
    "extension",
    "widget",
    "horat1us",
    "base"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Horat1us\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Horat1us\\Yii\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR12 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR12 ./src ./tests",
    "test": "./vendor/bin/phpunit"
  }
}
